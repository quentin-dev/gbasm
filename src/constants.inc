; ### PLAYER CONSTANTS ###

INCLUDE "hardware.inc"

    IF !DEF(CONSTANTS_INC)
CONSTANTS_INC SET 1

PLAYER_X EQU _RAM
PLAYER_Y EQU _RAM + 1

MOVE_SIZE EQU 8

MOVE_COOLDOWN_LENGTH EQU 12

ACTION_COOLDOWN_LENGTH EQU 32

MOVE_COOLDOWN EQU _RAM + 2
ACTION_COOLDOWN EQU _RAM + 3

WINDOW_Y_SHOWN EQU 120
WINDOW_Y_HIDDEN EQU 144

; Start text at on the second line indented by 1
WINDOW_TEXT_START_POSITION EQU _SCRN1 + $20 + $1

; End text 17 chars (inclusive) after the start
WINDOW_TEXT_END_POSITION EQU WINDOW_TEXT_START_POSITION + $11

WINDOW_TEXT_MAX_LEN EQU 18

WINDOW_X EQU 7

GROUND_TILE_INDEX EQU $01

    ENDC ;CONSTANTS_INC